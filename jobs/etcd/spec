---
name: etcd
description: |
  Consistent and highly-available key value store used as Kubernetesâ€™
  backing store for all cluster data.

provides:
  - name: etcd
    type: k8s-etcd
    properties:
      - port

consumes:
  - name: etcd
    type: k8s-etcd
  - name: api
    type: k8s-apiserver

templates:
  bin/etcd:          bin/etcd

  tls/ca/cert.pem:   tls/ca/cert.pem

  tls/etcd/cert.pem: tls/etcd/cert.pem
  tls/etcd/key.pem:  tls/etcd/key.pem

packages:
  - etcd

properties:
  debug:
    description: Enables verbose debugging, suitable for troubleshooting.
    default:     false

  port:
    description: TCP port to bind etcd processes to.
    default:     2379
